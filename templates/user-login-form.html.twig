<!-- login -->
    <section id="login">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-md-8 col-sm-9 col-xs-12 mx-auto">
            <div class="login-form">
              <form>
                <div class="login-header text-center">
                  <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                </div>
                <h3 class="secondary-title text-center">Login</h3>
                <div class="form-group">
                   {{ form.name }}
                </div>
                <div class="form-group">
                  {{ form.pass }}
                </div>
                <div class="form-group">
                    <a href="{{ base_url }}/user/password" alt="Request new password via email">Forgot password?</a>
                </div>
                <div class="login text-center">
                  {{ form.form_build_id }}
                    {{ form.form_id }}
                        {{ form.actions }}
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>