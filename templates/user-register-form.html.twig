<section id="login">
      <div class="container">
        <div class="row">
          <div class="col-lg-5 col-md-8 col-sm-9 col-xs-12 mx-auto">
            <div class=" login-form">
                <div class="login-header text-center">
                  <i class="far fa-user"></i>
                </div>
                <h3 class="secondary-title text-center">Register</h3>
                <div class="form-group">
                  {{form.account.mail}}
                </div>              
                <div class="form-group">
                  {{form.account.name}}
                </div>
                <div class="form-group file">
                  {{ form.user_picture }}
                </div>
                <div class="login text-center">
                  {{ form.form_build_id }}
                    {{ form.form_id }}
                        {{ form.actions }}
                </div>
            </div>  
          </div>
        </div>
      </div>
    </section>